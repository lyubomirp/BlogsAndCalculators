<div class="container body-content">
    <div class="row">
        <div class="col-md-12">
            <article>
                <header>
                    <h2 style="text-align: center">{{this.user.fullName}}'s profile</h2>
                </header>
                <br>
                <img src="{{this.user.profilePic}}" style="margin-left: auto; margin-right: auto; display: block;">
                <article>
                    {{#if views}}
                    <header>
                        <h3 style="text-align: center;">Latest Article: <a href="/article/details/{{this.id}}" style="text-decoration: none;">{{this.title}}</a></h3>
                        <p style="text-align: center;">With {{this.views}} total views!</p>
                    {{else}}
                        <h3 style="text-align: center;">{{this.user.fullName}} currently has no articles</h3>
                    </header>
                    {{/if}}
                </article>
                <br>
                <p style="text-align: center;">Contact info:</p>
                <p style="text-align: center;">{{this.user.email}}</p>
                <footer>
                    <div class="pull-right">
                        <a class="btn btn-default btn-xs" href="/">Back &raquo;</a>
                    </div>
                </footer>
            </article>
        </div>
    </div>
</div>